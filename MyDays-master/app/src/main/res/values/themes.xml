<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.MyDays" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="SleepStyle" parent="Widget.MaterialComponents.Button.OutlinedButton">
        <item name="android:layout_width">60dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">15dp</item>
    </style>

    <style name="TasksStyle" parent="Widget.MaterialComponents.Button.OutlinedButton">
        <item name="android:layout_width">50dp</item>
        <item name="android:layout_height">70dp</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">15dp</item>
    </style>

    <style name="TasksResultStyle" parent="TasksStyle">
        <item name="android:clickable">false</item>
    </style>

    <style name="CupStyle" parent="Widget.AppCompat.ImageButton">
        <item name="android:layout_width">45dp</item>
        <item name="android:layout_height">45dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:scaleType">fitCenter</item>
        <item name="android:src">@drawable/ic_cup_empty</item>
        <item name="android:background">@android:color/transparent</item>
    </style>

    <style name="HealthStyle" parent="Widget.AppCompat.ImageButton">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">50dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:scaleType">fitCenter</item>
        <item name="android:background">@android:color/transparent</item>
    </style>

    <style name="TrainingStyle" parent="Widget.MaterialComponents.Button.OutlinedButton">
        <item name="android:layout_width">100dp</item>
        <item name="android:layout_height">60dp</item>
        <item name="android:paddingHorizontal">10dp</item>
        <item name="android:textSize">12sp</item>
    </style>

    <style name="TittleStyle" parent="Widget.AppCompat.TextView">
        <item name="android:textSize">32sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/color_tittle</item>
        <item name="android:layout_marginTop">16dp</item>
    </style>

    <style name="SplashTheme" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="android:windowBackground">@drawable/slpash_screen</item>
    </style>

</resources>